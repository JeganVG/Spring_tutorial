<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context" xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"> 
        <context:annotation-config/>
        
        <bean id="redmeat" class="springpackage.Food">
        	<constructor-arg name="quantity" value="100"/>
        	<constructor-arg name="item" value="red-meat"/>
        </bean>
        
        <bean id="painkiller" class="springpackage.Food">
        	<constructor-arg name="quantity" value="10"/>
        	<constructor-arg name="item" value="painkiller"/>
        </bean>
        
        <bean id="human" class="springpackage.Human">
	        <constructor-arg name="noOfLegs" value="2"/>
	        <constructor-arg name="speed" value="13"/>
        </bean>
        
        <bean id="cheetah" class="springpackage.Cheetah">
	        <constructor-arg name="noOfLegs" value="4"/>
	        <constructor-arg name="speed" value="100"/>
        </bean>
        
</beans>